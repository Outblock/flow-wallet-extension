{
  "manifest_version": 3,
  "name": "Flow Wallet Extension",
  "version": "1.0.0",
  "description": "Chrome wallet extension for Flow",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "src/index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "flow-logo.png",
    "48": "flow-logo.png",
    "128": "flow-logo.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "storage", "alarms", "windows"],
  "web_accessible_resources": [
    {
      "resources": ["src/index.html", "script.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
